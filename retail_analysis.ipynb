import pandas as pd
import matplotlib.pyplot as plt

# Load dataset
df = pd.read_csv("orders.csv")

# Clean column names
df.columns = df.columns.str.lower().str.replace(" ", "_")

# Convert date column
df["order_date"] = pd.to_datetime(df["order_date"])

# Calculate discount
df["discount"] = df["list_price"] * df["discount_percent"] * 0.01

# Calculate sale price
df["sale_price"] = df["list_price"] - df["discount"]

# Calculate profit
df["profit"] = df["sale_price"] - df["cost_price"]

# Create time features
df["year"] = df["order_date"].dt.year
df["month"] = df["order_date"].dt.month

# Basic information
print("Total rows:", df.shape[0])
print("Date range:", df["order_date"].min(), "to", df["order_date"].max())
print("Total sales:", df["sale_price"].sum())
print("Total profit:", df["profit"].sum())
print("Negative profit transactions:", (df["profit"] < 0).sum())



# Chart 1: Monthly Sales Trend

monthly_sales = df.groupby(["year", "month"])["sale_price"].sum().reset_index()

pivot_sales = monthly_sales.pivot(index="month", columns="year", values="sale_price")

plt.figure()
pivot_sales.plot(kind="line")
plt.title("Monthly Sales Trend (2022 vs 2023)")
plt.xlabel("Month")
plt.ylabel("Total Sales")
plt.xticks(range(1,13))
plt.show()


# Chart 2: Profit by Category

category_profit = df.groupby("category")["profit"].sum().sort_values(ascending=False)

plt.figure()
category_profit.plot(kind="bar")
plt.title("Total Profit by Category")
plt.xlabel("Category")
plt.ylabel("Total Profit")
plt.show()


# Chart 3: Regional Performance

region_sales = df.groupby("region")["sale_price"].sum()
region_profit = df.groupby("region")["profit"].sum()

plt.figure()
region_sales.plot(kind="bar")
plt.title("Total Sales by Region")
plt.xlabel("Region")
plt.ylabel("Total Sales")
plt.show()

plt.figure()
region_profit.plot(kind="bar")
plt.title("Total Profit by Region")
plt.xlabel("Region")
plt.ylabel("Total Profit")
plt.show()

# Show descriptive statistics
df.describe()
